= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
  %h1 Sign In
  .login-fields
    %p Sign in using your registered account:
    .field
      = f.label :email
      = f.input :email, :required => false, :autofocus => true, :placeholder => 'E-Mail', :input_html => {:class => 'username login username-field'}
    / /field
    .field
      = f.label :password
      = f.input :password, :required => false, :type => :password, :placeholder => 'Password', :input_html => {:class => 'password login password-field'}
    / /password
  / /login-fields
  .login-actions
    %span.login-checkbox
      = f.input :remember_me, :input_html => {:class=> 'field login-checkbox'}, :inline_label => '.choice', :as => :boolean
      /%input#Field.field.login-checkbox{:name => "Field", :tabindex => "4", :type => "checkbox", :value => "First Choice"}/
      /%label.choice{:for => "Field"} Keep me signed in
    = f.button :submit, "Sign In", :class => 'button btn btn-primary btn-large'