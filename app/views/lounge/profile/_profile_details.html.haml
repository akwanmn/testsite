= simple_form_for @user, url: lounge_profile_path(@user) do |f|
  = f.simple_fields_for :user_profile do |up|
    .row
      .span9.offset1.border-bottom
        .test-group
          .control-group
            %p.pull-left.detail-class Marital Status
            .controls.span3
              = up.input :marital_status, collection: show_odd_options(UserProfile::MARITAL_STATUS), as: :radio_buttons, label: false
            .controls.span3
              = up.input :marital_status, collection: show_even_options(UserProfile::MARITAL_STATUS), as: :radio_buttons, label: false

    .row
      .span9.offset1.border-bottom
        .test-group
          .control-group
            %p.pull-left.detail-class Outdoor Activities
            .controls.span3
              = up.input :outdoor_activities, collection: show_odd_options(UserProfile::OUTDOOR_ACTIVITIES), as: :check_boxes, label: false
            .controls.span3
              = up.input :outdoor_activities, collection: show_even_options(UserProfile::OUTDOOR_ACTIVITIES), as: :check_boxes, label: false

    .row
      .span9.offset1.border-bottom
        .test-group
          .control-group
