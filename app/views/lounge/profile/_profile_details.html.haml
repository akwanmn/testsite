    .row
      .span9.offset1.border-bottom
        .test-group
          .control-group
            %p.pull-left.detail-class Food
            .controls.span3
              = up.input :eating, collection: show_odd_options(UserProfile::EATING), as: :radio_buttons, label: false
            .controls.span3
              = up.input :eating, collection: show_even_options(UserProfile::EATING), as: :radio_buttons, label: false


    .row
      .span9.offset1.border-bottom
        .test-group
          .control-group
            %p.pull-left.detail-class Politics
            .controls.span3
              = up.input :politics, collection: show_odd_options(UserProfile::POLITICS), as: :radio_buttons, label: false
            .controls.span3
              = up.input :politics, collection: show_even_options(UserProfile::POLITICS), as: :radio_buttons, label: false

    .row
      .span9.offset1.border-bottom
        .test-group
          .control-group
            %p.pull-left.detail-class Books & Reading
            .controls.span3
              = up.input :reading, collection: show_odd_options(UserProfile::BOOKS_READING), as: :radio_buttons, label: false
            .controls.span3
              = up.input :reading, collection: show_even_options(UserProfile::BOOKS_READING), as: :radio_buttons, label: false

    .row
      .span9.offset1.border-bottom
        .test-group
          .control-group
            %p.pull-left.detail-class Nightlife
            .controls.span3
              = up.input :nightlife, collection: show_odd_options(UserProfile::NIGHTLIFE), as: :check_boxes, label: false
            .controls.span3
              = up.input :nightlife, collection: show_even_options(UserProfile::NIGHTLIFE), as: :check_boxes, label: false

    .row
      .span10
        %p.pull-right{style: 'padding-top: 10px'}
          = link_to 'Back', modify_lounge_profile_index_path, class: 'btn btn-info'
          = f.submit :submit, value: 'Next', class: 'btn btn-warning'




