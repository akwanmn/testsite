- content_for :masthead do
  %h2 Manage Users
  %p= "There are currently #{User.count} users in the database."


%table.table.table-bordered.table-striped.table-highlight
  %thead
    %tr
      %th Name
      %th E-Mail
      %th Gender
      %th Birthday
      %th Age
      %th Functions
  %tbody
    - @users.each do |u|
      %tr
        %td= u.full_name
        %td
          =link_to u.email, '#'
        %td= t(u.user_profile.gender)
        %td= l(u.user_profile.birthday)
        %td= u.user_profile.age
        %td
          = link_to 'Edit', edit_admin_user_path(u), class: 'btn btn-secondary'
          = link_to 'Delete', admin_user_path(u), method: :delete, class: 'btn btn-danger'

= paginate @users, window: 2