        = up.input :politics, collection: show_even_options(POLITICS), as: :radio_buttons, label: false

    .row
      .span10.section-header
        Books & Reading
      .span5
        = up.input :reading, collection: show_odd_options(BOOKS_READING), as: :radio_buttons, label: false
      .span5
        = up.input :reading, collection: show_even_options(BOOKS_READING), as: :radio_buttons, label: false

    .row
      .span10.section-header
        Nightlife
      .span5
