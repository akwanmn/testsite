%strong Approximate Location:
= @user.user_profile.approximate_location
= simple_form_for [:admin,@user], html: {class: 'form-horizontal'} do |f|
  .row
    .span6
      = f.input :email, input_html: {class: 'input-xlarge'}
      = f.input :password
      = f.input :password_confirmation
      = f.input :is_admin, as: :boolean
      = f.input :sign_in_count, :disabled => true
      = f.input :last_sign_in_at, :disabled => true
      = f.input :last_sign_in_ip, :disabled => true
    .span6
      = f.simple_fields_for :user_profile do |up|
        = up.input :first_name
        = up.input :last_name
        = up.input :selected_birthday, as: :datepicker, input_html: {value: l(@user.user_profile.birthday)}
        = up.input :birthday, as: :hidden
        = up.input :gender, as: :select, collection: UserProfile::GENDERS
        = up.input :seeking, as: :select, collection: UserProfile::GENDERS
        = up.input :min_age
        = up.input :max_age
        = up.input :address_zip
        = up.input :address_country, :priority => ['United States', 'Canada']
  .row
    .offset1
      = f.button :submit, class: 'btn btn-primary'
      = link_to 'Create Order', new_admin_user_order_path(@user), class: 'btn btn-secondary'
      = link_to 'Cancel', admin_users_path, class: 'btn btn-tertiary'

